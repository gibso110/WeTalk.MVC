@model IEnumerable<WeTalk.Models.FriendRequestModels.FriendRequestListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Your Friend Requests</h2>

<p>
    @Html.ActionLink("Send a friend request", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User2FullName)
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User2FullName)
        </td>
        <td>
            @Html.ActionLink("View Request", "Edit", new { id=item.FriendRequestId}) |
            @Html.ActionLink("Delete Friend Request", "Delete", new { id = item.FriendRequestId})
        </td>
    </tr>
}

</table>
